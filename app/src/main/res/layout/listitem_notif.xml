<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutNotif"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/capsule_edittext"
    android:layout_margin="15dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/urgensiNotif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/proxima_nova_medium"
        android:text="@string/urgensi"
        android:textColor="#F44336"
        android:textSize="16pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNotif"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_below="@+id/urgensiNotif"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/profile"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urgensiNotif" />

    <TextView
        android:id="@+id/pesanNotif"
        android:layout_width="229dp"
        android:layout_height="55dp"
        android:layout_below="@+id/userNotif"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/messages"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userNotif"
        app:layout_constraintTop_toBottomOf="@+id/urgensiNotif" />

</android.support.constraint.ConstraintLayout>