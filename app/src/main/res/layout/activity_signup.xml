<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upi.mobprogproject.activity.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editTextNama"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/capsule_edittext"
                android:ems="10"
                android:hint="@string/hint_name"
                android:inputType="textPersonName"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNama" />

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/sig_intro"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/proxima_nova_medium"
                android:textColor="#7B7B7B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/capsule_edittext"
                android:ems="10"
                android:hint="@string/hint_mail"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNama" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/capsule_edittext"
                android:ems="10"
                android:hint="@string/hint_pass"
                android:inputType="textPassword"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextUsername" />

            <Button
                android:id="@+id/buttonSignup"
                android:layout_width="228dp"
                android:layout_height="44dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/capsule_btn"
                android:fontFamily="@font/roboto"
                android:onClick="registerUser"
                android:text="@string/sig_but"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

            <TextView
                android:id="@+id/tvKerja"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="96dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="58dp"
                android:onClick="toLogin"
                android:text="@string/link_tologin"
                android:textColor="@color/blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/buttonSignup"
                app:layout_constraintVertical_bias="0.0" />


            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="47dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/capsule_edittext"
                android:ems="10"
                android:hint="@string/hint_username"
                android:inputType="textPersonName"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="58dp"
                android:text="@string/signmess"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonSignup"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/signup" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
