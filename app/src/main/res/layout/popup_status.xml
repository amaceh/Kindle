<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="4dp"
    android:padding="5dp"
    android:background="@drawable/capsule_edittext">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="@string/status_new"
            android:fontFamily="@font/proxima_nova_medium"
            android:textColor="#060606"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etStatus"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Apa status anda hari ini?"
            android:textAlignment="center"
            android:background="@drawable/capsule_edittext"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btSimpanStatus"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/capsule_btn"
            android:text="Kirim"
            android:textColor="#FFF" />
    </RelativeLayout>
</android.support.v7.widget.CardView>