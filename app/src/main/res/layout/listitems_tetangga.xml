<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="@string/ketua" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvLeader"
        android:layout_below="@+id/tvLeader"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/tvLTNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/imageView4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/def_name" />

    <TextView
        android:id="@+id/tvLTalamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvLTNama"
        android:layout_below="@+id/tvLTNama"
        android:text="@string/alamat" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvLTalamat"
        android:layout_below="@+id/tvLTalamat"
        android:layout_marginTop="1dp"
        android:text="@string/kontak" />

    <Button
        android:id="@+id/btLTlengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:text="@string/detail_but" />

    <TextView
        android:id="@+id/tvLTkontak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/textView6"
        android:text="@string/def_kontak" />
</RelativeLayout>